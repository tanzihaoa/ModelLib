<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageTextView">
        <!--图片宽-->
        <attr name="itvImgWidth" format="dimension" />
        <!--图片高-->
        <attr name="itvImgHeight" format="dimension" />
        <!--图片选中图片路径-->
        <attr name="itvImgSelectSrc" format="reference|color" />
        <!-- 选中图片染色-->
        <attr name="itvImgSelectColor" format="color" />
        <!-- 未选中图片路径-->
        <attr name="itvImgUnSelectSrc" format="reference|color" />
        <!-- 未选中图片染色-->
        <attr name="itvImgUnSelectColor" format="color" />
        <!--间隔-->
        <attr name="itvSpace" format="dimension" />
        <!-- 文字大小-->
        <attr name="itvTextSize" format="dimension" />
        <!-- 文字选中颜色-->
        <attr name="itvTextSelectColor" format="color" />
        <!--文字未选中颜色-->
        <attr name="itvTextUnSelectColor" format="color" />
        <!--文字-->
        <attr name="itvText" format="string" />
        <!--文字是否加粗-->
        <attr name="itvTextIsBold" format="boolean" />


        <!--右边显示的控件-->
        <attr name="itvShowLocal" format="enum">
            <!--图片在文字的上面-->
            <enum name="TO_TEXT_TOP" value="0" />
            <!--图片在文字的下面-->
            <enum name="TO_TEXT_BOTTOM" value="1" />
            <!--图片在文字的左边-->
            <enum name="TO_TEXT_LEFT" value="2" />
            <!--图片在文字的右边-->
            <enum name="TO_TEXT_RIGHT" value="3" />
        </attr>

    </declare-styleable>

    <!--App title bar-->
    <declare-styleable name="XAppTitleBar">
        <!--标题文字-->
        <attr name="xtbTitleText" format="string" />
        <!--标题文字颜色-->
        <attr name="xtbTitleTxtColor" format="color" />
        <!--返回按钮颜色-->
        <attr name="xtbBackIconColor" format="color" />
        <!--是否显示返回按钮 默认显示-->
        <attr name="xtbBackIconIsShow" format="boolean" />

        <attr name="xtbIsWindowTranslucentStatus" format="boolean" />

        <!--右边显示的控件-->
        <attr name="xtbRightShowView" format="enum">
            <!--右边不显示-->
            <enum name="view_NONE" value="0" />
            <!--右边显示文字-->
            <enum name="VIEW_TEXT" value="1" />
            <!--右边显示图片-->
            <enum name="VIEW_IMAGE" value="2" />

        </attr>

        <!--左边图片资源-->
        <attr name="xtbLeftImgSrc" format="reference|color" />

        <!--右边文字-->
        <attr name="xtbRightText" format="string" />
        <!--右边文字颜色-->
        <attr name="xtbRightTxtColor" format="color" />
        <!--右边文字大小-->
        <attr name="xtbRightTxtSize" format="dimension" />
        <!--右边文字是否加粗  默认不加粗-->
        <attr name="xtbRightTxtIsBold" format="boolean" />

        <!--右边图片资源-->
        <attr name="xtbRightImgSrc" format="reference|color" />
        <!--右边图片颜色-->
        <attr name="xtbRightImgColor" format="integer" />
        <!--右边图片宽-->
        <attr name="xtbRightImgWidth" format="dimension" />
        <!--右边图片高-->
        <attr name="xtbRightImgHeight" format="dimension" />
    </declare-styleable>
</resources>