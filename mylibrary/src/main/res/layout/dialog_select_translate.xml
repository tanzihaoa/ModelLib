<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.tzh.mylibrary.shapeview.ShapeConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeBackgroundColor="@color/color_fff"
        app:shapeCornerTopLeft="25dp"
        app:shapeCornerTopRight="25dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:includeFontPadding="false"
            android:text="选择问题"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/color_fff"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:shapeCorners="12dp"
            app:shapeBackgroundColor="@color/color_FF8800"
            android:layout_margin="16dp"/>
        <!-- 选择器背景 -->
        <com.tzh.mylibrary.shapeview.ShapeConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            app:shapeBackgroundColor="@color/color_eef3f6"
            app:shapeCorners="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/layout"
            app:layout_constraintBottom_toBottomOf="@+id/layout">
        </com.tzh.mylibrary.shapeview.ShapeConstraintLayout>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toTopOf="@+id/tv_sure">
            <com.contrarywind.view.WheelView
                android:id="@+id/wheel_view_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp" />
            <com.contrarywind.view.WheelView
                android:id="@+id/wheel_view_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp" />
        </LinearLayout>
    </com.tzh.mylibrary.shapeview.ShapeConstraintLayout>
</layout>