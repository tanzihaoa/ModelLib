<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <com.tzh.mylibrary.shapeview.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shapeBackgroundColor="@color/color_fff"
        android:orientation="vertical"
        android:gravity="center"
        app:shapeCorners="12dp"
        android:padding="12dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒"
            android:textColor="@color/color_333"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="20dp"
            tool:text="提醒"
            android:textColor="#cc000000"
            android:gravity="center"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp">
            <com.tzh.mylibrary.shapeview.ShapeTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:layout_constraintTop_toBottomOf="@+id/et_captcha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeBorderWidth="1dp"
                app:shapeBorderColor="@color/color_50333"
                app:shapeCorners="12dp"
                android:text="取消"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_50333"/>
            <com.tzh.mylibrary.shapeview.ShapeTextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toBottomOf="@+id/et_captcha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeBackgroundColor="@color/color_FF8800"
                app:shapeCorners="12dp"
                android:textSize="16sp"
                android:text="确定"
                android:gravity="center"
                android:textColor="@color/color_fff"/>
        </LinearLayout>
    </com.tzh.mylibrary.shapeview.ShapeLinearLayout>
</layout>