<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">
            <TextView
                android:id="@+id/tv_text_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="4"
                android:textSize="12sp"
                android:textColor="@color/color_50333"
                android:text="偏低"/>
            <TextView
                android:id="@+id/tv_text_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="6"
                android:textSize="12sp"
                android:textColor="@color/color_333"
                android:layout_marginStart="4dp"
                android:text="标准"/>
            <TextView
                android:id="@+id/tv_text_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="5"
                android:textSize="12sp"
                android:textColor="@color/color_50333"
                android:layout_marginStart="4dp"
                android:text="超重"/>
            <TextView
                android:id="@+id/tv_text_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="14"
                android:textSize="12sp"
                android:textColor="@color/color_50333"
                android:layout_marginStart="4dp"
                android:text="肥胖"/>
        </LinearLayout>
        <com.tzh.mylibrary.shapeview.ShapeView
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_2"
            app:layout_constraintHorizontal_weight="4"
            app:shapeBackgroundColor="@color/color_9ac6e1"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_title"
            android:layout_marginTop="15dp"
            app:shapeCorners="4dp"/>
        <com.tzh.mylibrary.shapeview.ShapeView
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toEndOf="@+id/view_1"
            app:layout_constraintEnd_toStartOf="@+id/view_3"
            app:layout_constraintHorizontal_weight="6"
            app:shapeBackgroundColor="@color/color_9ebf6a"
            app:layout_constraintTop_toBottomOf="@+id/layout_title"
            android:layout_marginTop="15dp"
            android:layout_marginStart="4dp"
            app:shapeCorners="4dp"/>
        <com.tzh.mylibrary.shapeview.ShapeView
            android:id="@+id/view_3"
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintStart_toEndOf="@+id/view_2"
            app:layout_constraintEnd_toStartOf="@+id/view_4"
            app:layout_constraintHorizontal_weight="5"
            app:shapeBackgroundColor="@color/color_ffbc5c"
            app:layout_constraintTop_toBottomOf="@+id/layout_title"
            android:layout_marginTop="15dp"
            android:layout_marginStart="4dp"
            app:shapeCorners="4dp"/>
        <com.tzh.mylibrary.shapeview.ShapeView
            android:id="@+id/view_4"
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_3"
            app:layout_constraintHorizontal_weight="14"
            app:shapeBackgroundColor="@color/color_f15c4d"
            app:layout_constraintTop_toBottomOf="@+id/layout_title"
            android:layout_marginTop="15dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:shapeCorners="4dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_1"
            android:layout_marginBottom="1dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_z_up"
                android:layout_width="7dp"
                android:layout_height="4.5dp"
                android:src="@drawable/icon_z"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            android:layout_marginTop="1dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_z_down"
                android:layout_width="7dp"
                android:layout_height="4.5dp"
                android:src="@drawable/icon_z"
                android:rotation="180"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.5"
            app:layout_constraintStart_toEndOf="@+id/view_1"
            app:layout_constraintEnd_toStartOf="@+id/view_2"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            android:textColor="@color/color_50333"
            android:textSize="12sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24.0"
            app:layout_constraintStart_toEndOf="@+id/view_2"
            app:layout_constraintEnd_toStartOf="@+id/view_3"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            android:textColor="@color/color_50333"
            android:textSize="12sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28.0"
            app:layout_constraintStart_toEndOf="@+id/view_3"
            app:layout_constraintEnd_toStartOf="@+id/view_4"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            android:textColor="@color/color_50333"
            android:textSize="12sp"
            android:layout_marginTop="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>