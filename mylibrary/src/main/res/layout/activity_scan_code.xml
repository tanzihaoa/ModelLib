<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tool="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.tzh.mylibrary.activity.tool.ScanCodeActivity" />
    </data>
    <com.tzh.mylibrary.shapeview.ShapeLinearLayout
        android:id="@+id/layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:shapeBackgroundColor="@color/color_f7f7f7">
        <com.tzh.mylibrary.view.XAppTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:xtbTitleText="扫码工具"
            android:background="@color/color_fff"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码结果"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"/>
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:id="@+id/tv_reply"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="8dp"
            android:hint="扫码结果"
            app:shapeBackgroundColor="@color/color_fff"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:shapeCorners="12dp"/>
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="20dp"
            app:shapeBackgroundColor="@color/color_00f3b8"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:onClick="@{()->activity.scanCode()}"
            android:textColor="@color/color_fff"
            android:text="扫码"/>
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="20dp"
            app:shapeBackgroundColor="#66C668"
            app:shapeCorners="12dp"
            android:onClick="@{()->activity.copy()}"
            android:gravity="center"
            android:textColor="@color/color_fff"
            android:text="复制扫码结果"/>
    </com.tzh.mylibrary.shapeview.ShapeLinearLayout>
</layout>