<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.tzh.mylibrary.activity.TranslateActivity" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <com.tzh.mylibrary.view.XAppTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:xtbTitleText="翻译"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:onClick="@{()->activity.change()}"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="中文"
                android:textSize="16sp"
                android:textColor="@color/color_333"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/icon_convert"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_text_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英文"
                android:textSize="16sp"
                android:textColor="@color/color_333"/>
        </LinearLayout>

        <com.tzh.mylibrary.shapeview.ShapeEditText
            android:id="@+id/et_text_1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:maxLength="100"
            app:shapeBorderWidth="1dp"
            app:shapeBorderColor="@color/color_999"
            app:shapeCorners="12dp"
            android:hint="请输入内容"
            android:inputType="textMultiLine"/>
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="20dp"
            app:shapeBackgroundColor="@color/color_00f3b8"
            app:shapeCorners="12dp"
            android:gravity="center"
            android:text="翻译"
            android:onClick="@{()->activity.translate()}"
            android:textColor="@color/color_fff"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <com.tzh.mylibrary.shapeview.ShapeEditText
            android:id="@+id/et_text_2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:inputType="textMultiLine"
            app:shapeBorderWidth="1dp"
            app:shapeBorderColor="@color/color_999"
            app:shapeCorners="12dp"/>
    </LinearLayout>
</layout>