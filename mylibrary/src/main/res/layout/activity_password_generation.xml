<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">
        <com.tzh.mylibrary.view.XAppTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:xtbTitleText="随机字符生成器"/>
        <com.tzh.mylibrary.shapeview.ShapeConstraintLayout
            android:id="@+id/layout_psw"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            app:shapeBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:shapeCorners="10dp">
            <TextView
                android:id="@+id/tv_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                tools:text=""/>
            <ImageView
                android:id="@+id/iv_copy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_copy"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </com.tzh.mylibrary.shapeview.ShapeConstraintLayout>
        <com.tzh.mylibrary.shapeview.ShapeLinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shapeBackgroundColor="@color/white"
            app:shapeCorners="10dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_psw"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="19dp"
            android:paddingHorizontal="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数字 0123456789"
                android:drawableStart="@drawable/bg_select_password"
                android:drawablePadding="12dp"
                android:checked="true"
                android:textColor="#333333"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_small_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/bg_select_password"
                android:drawablePadding="12dp"
                android:checked="true"
                android:text="小写字母（a-z）"
                android:textColor="#333333"
                android:layout_marginTop="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_big_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/bg_select_password"
                android:drawablePadding="12dp"
                android:checked="true"
                android:text="大写字母（A-Z）"
                android:textColor="#333333"
                android:layout_marginTop="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_special_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特殊字符！@#¥%&amp;*（）"
                android:drawableStart="@drawable/bg_select_password"
                android:drawablePadding="12dp"
                android:textColor="#333333"
                android:layout_marginTop="15dp"
                android:textSize="15sp"/>
        </com.tzh.mylibrary.shapeview.ShapeLinearLayout>
        <com.tzh.mylibrary.shapeview.ShapeConstraintLayout
            android:id="@+id/layout_seek"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            app:shapeBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/layout_item"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            app:shapeCorners="10dp">
            <TextView
                android:id="@+id/tv_psw_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:text="字符长度"/>
            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_copy"
                android:layout_marginEnd="6dp"
                android:progressDrawable="@drawable/seekbar_drawable"
                android:maxHeight="6dp"
                android:min="4"
                android:max="32"
                android:progress="8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_psw_length"
                app:layout_constraintEnd_toStartOf="@+id/tv_length"/>
            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:text="8"/>
        </com.tzh.mylibrary.shapeview.ShapeConstraintLayout>
        
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:id="@+id/tv_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:shapeBackgroundColor="@color/color_FF8800"
            app:shapeCorners="10dp"
            android:gravity="center"
            android:text="生成字符"
            android:textColor="#ffffff"
            app:layout_constraintTop_toBottomOf="@+id/layout_seek"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>