<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.tzh.myapplication.ui.activity.SendSmsActivity" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.tzh.mylibrary.view.XAppTitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:xtbTitleText="发送彩信"
            app:xtbRightShowView="VIEW_TEXT"
            app:xtbRightText=""
            app:layout_constraintTop_toTopOf="parent"/>
        <com.tzh.mylibrary.shapeview.ShapeEditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLines="1"
            android:maxLength="11"
            android:textSize="16sp"
            android:textColor="@color/color_333"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"/>
        <com.tzh.mylibrary.shapeview.ShapeEditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp"
            android:layout_margin="16dp"
            android:textColor="@color/color_333"
            android:hint="请输入短信内容"
            android:padding="16dp"
            android:textSize="16sp"/>
        <com.tzh.mylibrary.shapeview.ShapeRelativeLayout
            android:id="@+id/layout_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            app:shapeBackgroundColor="@color/color_f4f4f4"
            app:shapeCorners="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="选择图片"
                android:gravity="center"/>
            <com.tzh.mylibrary.shapeview.ShapeImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </com.tzh.mylibrary.shapeview.ShapeRelativeLayout>
        <com.tzh.mylibrary.shapeview.ShapeTextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            app:shapeBackgroundColor="@color/color_ffbc5c"
            app:shapeCorners="12dp"
            android:onClick="@{()->activity.sendSms()}"
            android:textColor="@color/color_fff"
            android:text="发送彩信"
            android:layout_margin="16dp"/>
    </LinearLayout>
</layout>