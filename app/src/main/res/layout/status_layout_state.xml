<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:parentTag="android.widget.FrameLayout">

        <LinearLayout
            android:id="@+id/state_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="120dp"
            tools:background="@color/color_fff">

            <ImageView
                android:id="@+id/state_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:background="@color/color_000" />


            <TextView
                android:id="@+id/state_big_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textColor="@color/color_666"
                android:textSize="14sp"
                tools:text="大标题文字" />

            <TextView
                android:id="@+id/state_min_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textColor="@color/color_999"
                android:textSize="12sp"
                tools:text="小标题文字" />

            <Space
                android:id="@+id/state_space"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <com.tzh.mylibrary.shapeview.ShapeTextView
                android:id="@+id/state_re_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="77dp"
                android:paddingTop="10dp"
                android:paddingEnd="77dp"
                android:paddingBottom="10dp"
                android:text="重新连接"
                android:textSize="16sp"
                android:visibility="gone"
                app:shapeBorderColor="@color/color_ddd"
                app:shapeBorderWidth="0.5dp"
                app:shapeCorners="100dp"
                tools:visibility="visible" />

            <com.tzh.mylibrary.shapeview.ShapeLinearLayout
                android:id="@+id/state_go_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="209dp"
                android:paddingStart="45dp"
                android:paddingTop="10dp"
                android:paddingEnd="45dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                app:shapeBackgroundColor="@color/color_00f3b8"
                app:shapeCorners="100dp"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/state_go_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_333"
                    android:textSize="16dp"
                    tools:text="去xxxxxxxxxxx" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="4dp"
                    android:tint="@color/color_333"
                    app:srcCompat="@drawable/svg_right_jiantou" />
            </com.tzh.mylibrary.shapeview.ShapeLinearLayout>
        </LinearLayout>
    </merge>
</layout>
