<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tzh.mylibrary.shapeview.ShapeLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.tzh.mylibrary.view.title.XAppTitleBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:xtbTitleText="壁纸"/>
        <com.angcyo.tablayout.DslTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:minHeight="32dp"
            app:tab_default_index="0"
            app:tab_deselect_color="@color/color_333"
            app:tab_draw_border="true"
            app:tab_draw_indicator="true"
            app:tab_enable_gradient_color="true"
            app:tab_enable_text_bold="true"
            app:tab_indicator_height="2dp"
            app:tab_indicator_radius="50dp"
            app:tab_indicator_solid_color="@color/color_00f3b8"
            app:tab_indicator_stroke_color="@color/color_00f3b8"
            app:tab_indicator_stroke_width="1dp"
            app:tab_indicator_style="STYLE_BOTTOM"
            app:tab_indicator_width="28dp"
            app:tab_select_color="@color/color_333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </com.tzh.mylibrary.shapeview.ShapeLinearLayout>
</layout>