<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_checked="true">
        <bitmap android:gravity="center" android:src="@drawable/ic_radio_selected" />
    </item>
    <item android:state_selected="true">
        <bitmap android:gravity="center" android:src="@drawable/ic_radio_selected" />
    </item>

    <item >
        <bitmap android:gravity="center" android:src="@drawable/ic_radio_unselect" />
    </item>


</selector>